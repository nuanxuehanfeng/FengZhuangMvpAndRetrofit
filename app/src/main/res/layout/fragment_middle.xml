<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bawei.wangxueshi.fengzhuangmvpandretrofit.fragments.first.MiddleFragment">

    <!-- TODO: Update blank fragment layout -->
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <!--标题-->
           <ImageView
               android:id="@+id/middlefragment_iv_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <!--空格-->
           <LinearLayout
               android:orientation="vertical"
               android:background="#EEEEEE"
               android:layout_width="match_parent"
               android:layout_height="10dp"></LinearLayout>

<!--十点秒杀-->
           <ImageView
               android:id="@+id/middlefragment_iv_shidian"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <HorizontalScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/middlefragment_linearlayout_shidian"
                   android:orientation="horizontal"
                   android:paddingTop="2dp"
                   android:background="#eeeeee"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></LinearLayout>
           </HorizontalScrollView>

           <!--空格-->
           <LinearLayout
               android:orientation="vertical"
               android:background="#EEEEEE"
               android:layout_width="match_parent"
               android:layout_height="10dp"></LinearLayout>

         <!--活动专区-->


           <ImageView
               android:paddingBottom="2dp"
               android:background="#eeeeee"
               android:id="@+id/middlefragment_iv_action"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <!--活动一-->

           <LinearLayout
               android:id="@+id/middlefragment_linearlayout_action"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content"></LinearLayout>

           <!--空格-->
           <LinearLayout
               android:orientation="vertical"
               android:background="#EEEEEE"
               android:layout_width="match_parent"
               android:layout_height="10dp"></LinearLayout>

    <!--品牌特卖-->
           <ImageView
               android:id="@+id/middlefragment_iv_brand"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <!--品牌一-->
           <ImageView
               android:id="@+id/middlefragment_iv_brand1"
               android:paddingTop="2dp"
               android:paddingBottom="2dp"
               android:background="#eeeeee"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
              <!--品牌一内容-->
           <HorizontalScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/middlefragment_lilayout_brand1"
                   android:paddingTop="2dp"

                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></LinearLayout>
           </HorizontalScrollView>

           <!--空格-->
           <LinearLayout
               android:orientation="vertical"
               android:background="#EEEEEE"
               android:layout_width="match_parent"
               android:layout_height="10dp"></LinearLayout>

           <!--品牌二-->
           <ImageView
               android:id="@+id/middlefragment_iv_brand2"
               android:paddingTop="2dp"
               android:paddingBottom="2dp"
               android:background="#eeeeee"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <!--品牌二内容-->
           <HorizontalScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/middlefragment_lilayout_brand2"
                   android:paddingTop="2dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></LinearLayout>
           </HorizontalScrollView>
           <!--空格-->
           <LinearLayout
               android:orientation="vertical"
               android:background="#EEEEEE"
               android:layout_width="match_parent"
               android:layout_height="10dp"></LinearLayout>

           <!--品牌三-->
           <ImageView
               android:id="@+id/middlefragment_iv_brand3"
               android:paddingTop="2dp"
               android:paddingBottom="2dp"
               android:background="#eeeeee"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <!--品牌三内容-->
           <HorizontalScrollView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/middlefragment_lilayout_brand3"
                   android:paddingTop="2dp"

                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></LinearLayout>
           </HorizontalScrollView>


           <!--空格-->
           <LinearLayout
               android:orientation="vertical"
               android:background="#EEEEEE"
               android:layout_width="match_parent"
               android:layout_height="10dp"></LinearLayout>

           <!--品牌四-->
           <ImageView
               android:id="@+id/middlefragment_iv_brand4"
               android:paddingTop="2dp"
               android:paddingBottom="2dp"
               android:background="#eeeeee"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <!--品牌四内容-->
           <HorizontalScrollView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/middlefragment_lilayout_brand4"
                   android:paddingTop="2dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></LinearLayout>
           </HorizontalScrollView>

<!--最后的空格-->
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"

               android:layout_height="50dp"></LinearLayout>





       </LinearLayout>
   </ScrollView>

</FrameLayout>
