<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:padding="9dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/four_fragment_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/btn_back"
            />
        <TextView
            android:layout_marginRight="7dp"
            android:text="登录"
            android:textColor="@color/text_hei"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:gravity="center"
            />

    </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:background="@color/shop_hui"
    android:layout_width="match_parent"
    android:layout_height="20dp"></LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:text="账号:"
        android:textColor="@color/text_hei"
        android:padding="10dp"
        />

    <com.bawei.wangxueshi.fengzhuangmvpandretrofit.ZijiView.EditTextWithDel
        android:id="@+id/four_fragment_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/text_hei"
        android:padding="10dp"
        />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="密码:"
            android:textColor="@color/text_hei"
            android:padding="10dp"
            />

    <com.bawei.wangxueshi.fengzhuangmvpandretrofit.ZijiView.EditTextWithDel
        android:id="@+id/four_fragment_et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/text_hei"
        android:padding="10dp"
        />
    </LinearLayout>
<Button
    android:layout_marginTop="30dp"
    android:id="@+id/four_fragment_bt_load"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shop_hui"
    android:text="登录"
    android:textColor="@color/text_hei"
    />
    <TextView
        android:id="@+id/four_fragment_btn_forgetpsw"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:gravity="right"
        />
    <Button
        android:id="@+id/four_fragment_btn_register"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="免费注册"
        android:layout_marginLeft="150dp"
        />
<TextView
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/text_hui"
    android:text="----------其他方式登录----------"
    android:gravity="center"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/four_fragment_iv_load_qq"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_delete_gray"/>

    <ImageView
        android:id="@+id/four_fragment_iv_load_weixin"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_delete_gray"
        />

</LinearLayout>

</LinearLayout>
