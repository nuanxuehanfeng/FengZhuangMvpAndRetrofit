<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="5dp"
    >
    <TextView
        android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
         android:text="购物车"
        android:paddingLeft="55dp"
        android:textSize="25sp"
        android:gravity="center"
    android:textColor="@color/text_hei"
    />
    <TextView
        android:id="@+id/thirdfragment_tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="编辑"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/text_hui"
        />
</LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/thirdfragment_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />
    <LinearLayout
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            >
        <ImageView
            android:layout_marginLeft="7dp"
            android:id="@+id/thirdfragment_iv_selects"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cpt_filter_check_on"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="全选"
            android:gravity="center"
            android:textColor="@color/text_hei"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_weight="0"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/thirdfragment_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_hong"

                />
            <TextView
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/text_hei"
                android:text="免运费"/>
        </LinearLayout>
        <Button
            android:id="@+id/thirdfragment_btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去结算"
            />
    </LinearLayout>
</LinearLayout>
